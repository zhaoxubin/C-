#include<stdio.h>
#include<windows.h>
int main()
{
	int i = 1;
	for (; i <= 13; i = i + 2)  /*打印上半部分*/
	{
		int	j = 1;
		for (; j <= i; j++)
		{

			printf("%c", '*');
		}
		printf("\n");
	}
	int p = 11;
	for (; p >= 1; p = p - 2)/*打印下半部分*/
	{
		int	j = 1;
		for (; j <= p; j++)
		{

			printf("%c", '*');
		}
		printf("\n");
	}
	system("pause");
	return 0;
}
